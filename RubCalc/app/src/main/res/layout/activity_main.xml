<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#007acc"
    tools:context=".MainActivity">


  <TextView
      android:id="@+id/textView"
      android:layout_marginTop="90dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="CALCULATOR"
      android:textSize="30dp"
      android:gravity="center"/>

  <EditText
      android:id="@+id/result"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:ems="10"
      android:text="0"
      android:textSize="80dp"
      android:gravity="right"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
   android:orientation="horizontal">
      <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/nine"
        android:text="9"
        android:textSize="40sp"
          android:layout_weight="1"/>

     <Button
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:id="@+id/eight"
         android:text="8"
         android:textSize="40sp"
         android:layout_weight="1"/>

     <Button
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:id="@+id/seven"
         android:text="7"
         android:textSize="40sp"
         android:layout_weight="1"/>

     <Button
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:id="@+id/plus"
         android:text="+"
         android:textSize="40sp"
         android:layout_weight="1"/>
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/six"
            android:text="6"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/five"
            android:text="5"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/four"
            android:text="4"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/minus"
            android:text="-"
            android:textSize="40sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/three"
            android:text="3"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/two"
            android:text="2"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/one"
            android:text="1"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/multiply"
            android:text="*"
            android:textSize="40sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/dot"
            android:text="."
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/zero"
            android:text="0"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/equal"
            android:text="="
            android:textSize="40sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/div"
            android:text="/"
            android:textSize="40sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/clear_text"
            android:text="CLEAR"
            android:textSize="40sp"
            tools:ignore="DuplicateIds"/>
    </LinearLayout>
</LinearLayout>
